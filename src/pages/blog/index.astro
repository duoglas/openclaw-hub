---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Articles" description="All OpenClaw Guide articles">
  <h1>Articles</h1>
  {posts.map(post => (
    <a href={`/blog/${post.id}/`} style="text-decoration:none; color:inherit; display:block;">
      <div class="card" style="cursor:pointer;">
        <h3 style="margin-top:0;">{post.data.title}</h3>
        <p style="color:#999; margin:0.3rem 0;">{post.data.description}</p>
      </div>
    </a>
  ))}
</BaseLayout>

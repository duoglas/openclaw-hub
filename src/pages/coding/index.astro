  <style>
    :root{--bg:#0a1022;--panel:#111a36;--card:#172246;--line:#2a396f;--text:#ecf1ff;--muted:#afbbdf;--brand:#66a3ff;--ok:#4dd6a4;--warn:#ffce6d;--bad:#ff7a7a}
    *{box-sizing:border-box} body{margin:0;background:var(--bg);color:var(--text);font-family:Inter,-apple-system,Segoe UI,sans-serif;line-height:1.65}
    .wrap{display:grid;grid-template-columns:300px 1fr;min-height:100vh}
    aside{position:sticky;top:0;height:100vh;overflow:auto;background:var(--panel);border-right:1px solid var(--line);padding:18px}
    aside h1{font-size:18px;margin:0 0 10px} aside a{display:block;color:var(--muted);text-decoration:none;padding:8px 10px;border-radius:8px;margin:4px 0}
    aside a:hover{background:#1a2854;color:#fff}
    main{padding:26px;max-width:1080px}
    h2{margin:30px 0 12px;border-bottom:1px solid var(--line);padding-bottom:8px}
    .hero{background:linear-gradient(120deg,#1a2d63,#0f3a7a);border:1px solid #3156a2;padding:18px;border-radius:14px}
    .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:12px}
    .card{background:var(--card);border:1px solid var(--line);padding:12px;border-radius:10px}
    .badge{display:inline-block;background:#253663;border-radius:999px;padding:3px 8px;font-size:12px;color:#c9d7ff}

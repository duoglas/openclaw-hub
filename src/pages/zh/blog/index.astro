---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(p => p.data.lang === 'zh')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'OpenClaw 指南文章',
  itemListElement: posts.map((post, index) => {
    const slug = post.id.replace(/^zh\//, '').replace(/\.md$/, '');
    return {
      '@type': 'ListItem',
      position: index + 1,
      url: `https://kuoo.uk/zh/blog/${slug}/`,
      name: post.data.title,
    };
  }),
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: '首页',
      item: 'https://kuoo.uk/zh/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: '文章',
      item: 'https://kuoo.uk/zh/blog/',
    },
  ],
};
---

<BaseLayout title="文章" description="OpenClaw 指南全部文章" lang="zh">
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <h1>文章</h1>
  {posts.map(post => {
    const slug = post.id.replace(/^zh\//, '').replace(/\.md$/, '');
    return (
      <a href={`/zh/blog/${slug}/`} style="text-decoration:none; color:inherit; display:block;">
        <div class="card" style="cursor:pointer;">
          <h3 style="margin-top:0;">{post.data.title}</h3>
          <p style="color:#999; margin:0.3rem 0;">{post.data.description}</p>
        </div>
      </a>
    );
  })}
</BaseLayout>

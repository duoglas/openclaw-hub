---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(p => p.data.lang === 'en')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---
<BaseLayout title="Home" lang="en">
  <h1>ðŸ¦ž OpenClaw Guide</h1>
  <p style="font-size:1.1rem; margin:1rem 0;">Your hub for AI Agent automation â€” tutorials, comparisons, and guides for OpenClaw and the AI agent ecosystem.</p>
  
  <h2>Latest Articles</h2>
  {posts.slice(0, 20).map(post => {
    const slug = post.id.replace(/^en\//, '').replace(/\.md$/, '');
    return (
      <a href={`/en/blog/${slug}/`} style="text-decoration:none; color:inherit;">
        <div class="card" style="cursor:pointer;">
          <h3 style="margin-top:0;">{post.data.title}</h3>
          <p style="color:#999; margin:0.3rem 0;">{post.data.description}</p>
          <div style="color:#666; font-size:0.85rem;">
            {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
            {' Â· '}
            {post.data.tags.map(tag => <span class="tag" style="margin-right:4px;">{tag}</span>)}
          </div>
        </div>
      </a>
    );
  })}
</BaseLayout>

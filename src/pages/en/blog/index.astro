---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(p => p.data.lang === 'en')
  .filter(p => {
    const slug = p.id.replace(/^en\//, '').replace(/\.md$/, '');
    return !slug.startsWith('openclaw-daily-') && !slug.startsWith('openclaw-weekly-');
  })
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'OpenClaw Articles',
  itemListElement: posts.map((post, index) => {
    const slug = post.id.replace(/^en\//, '').replace(/\.md$/, '');
    return {
      '@type': 'ListItem',
      position: index + 1,
      url: `https://kuoo.uk/en/blog/${slug}/`,
      name: post.data.title,
    };
  }),
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: 'https://kuoo.uk/en/',
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Articles',
      item: 'https://kuoo.uk/en/blog/',
    },
  ],
};
---

<BaseLayout title="Guides" description="OpenClaw guides and troubleshooting articles (excluding dailies)" lang="en">
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <h1>Guides</h1>
  {posts.map(post => {
    const slug = post.id.replace(/^en\//, '').replace(/\.md$/, '');
    return (
      <a href={`/en/blog/${slug}/`} style="text-decoration:none; color:inherit; display:block;">
        <div class="card" style="cursor:pointer;">
          <h3 style="margin-top:0;">{post.data.title}</h3>
          <p style="color:#999; margin:0.3rem 0;">{post.data.description}</p>
        </div>
      </a>
    );
  })}
</BaseLayout>

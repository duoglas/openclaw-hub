---
interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'zh';
  alternateUrl?: string;
  alternateLang?: string;
}
const {
  title,
  description = 'OpenClaw Guide - AI Agent Automation Hub',
  lang = 'en',
  alternateUrl,
  alternateLang,
} = Astro.props;

const isZh = lang === 'zh';
const prefix = `/${lang}`;
const otherLang = isZh ? 'en' : 'zh';
const currentPath = Astro.url.pathname;
const enUrl = currentPath.replace(`/${lang}/`, '/en/');
const zhUrl = currentPath.replace(`/${lang}/`, '/zh/');
---
<!doctype html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | OpenClaw Guide</title>
  {alternateUrl && alternateLang && (
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
  )}
  <link rel="alternate" hreflang={lang} href={Astro.url.href} />
  <link rel="alternate" hreflang="x-default" href={Astro.url.href.replace(`/${lang}/`, '/en/')} />
  <style>
    :root { --accent: #e74c3c; --bg: #0f0f0f; --text: #e0e0e0; --card: #1a1a2e; }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: system-ui, sans-serif; background: var(--bg); color: var(--text); line-height: 1.7; }
    header { background: var(--card); padding: 1rem 2rem; border-bottom: 2px solid var(--accent); }
    header a { color: var(--accent); text-decoration: none; font-weight: bold; font-size: 1.3rem; }
    header nav { display: flex; gap: 1.5rem; align-items: center; max-width: 900px; margin: 0 auto; flex-wrap: wrap; }
    header nav a { color: var(--text); font-size: 0.95rem; }
    header nav .lang-switch { margin-left: auto; display: flex; gap: 0.5rem; align-items: center; }
    header nav .lang-switch a { padding: 2px 10px; border-radius: 4px; font-size: 0.85rem; font-weight: 600; }
    header nav .lang-switch a.active { background: var(--accent); color: #fff; }
    header nav .lang-switch a:not(.active) { color: #999; border: 1px solid #555; }
    main { max-width: 900px; margin: 2rem auto; padding: 0 1.5rem; }
    footer { text-align: center; padding: 2rem; color: #666; font-size: 0.85rem; }
    a { color: var(--accent); }
    h1,h2,h3 { color: #fff; margin: 1.5rem 0 0.8rem; }
    .card { background: var(--card); border-radius: 12px; padding: 1.5rem; margin: 1rem 0; }
    .tag { background: var(--accent); color: #fff; padding: 2px 8px; border-radius: 4px; font-size: 0.8rem; }
    code { background: #2d2d2d; padding: 2px 6px; border-radius: 4px; font-size: 0.9em; }
    pre { background: #1e1e2e; padding: 1rem; border-radius: 8px; overflow-x: auto; }
    pre code { background: none; padding: 0; }
    img { max-width: 100%; border-radius: 8px; }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href={prefix + '/'}>{isZh ? 'ü¶û OpenClaw ÊåáÂçó' : 'ü¶û OpenClaw Guide'}</a>
      <a href={prefix + '/blog/'}>{isZh ? 'ÊñáÁ´†' : 'Articles'}</a>
      <a href={prefix + '/blog/tag/comparison/'}>{isZh ? 'ÂØπÊØî' : 'Compare'}</a>
      <a href={prefix + '/blog/tag/guide/'}>{isZh ? 'ÊïôÁ®ã' : 'Guides'}</a>
      <a href="https://github.com/openclaw/openclaw" target="_blank">GitHub</a>
      <div class="lang-switch">
        <a href={enUrl} class={lang === 'en' ? 'active' : ''}>EN</a>
        <a href={zhUrl} class={lang === 'zh' ? 'active' : ''}>‰∏≠Êñá</a>
      </div>
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <p>¬© 2026 OpenClaw Guide ¬∑ Built with ü¶û and AI</p>
  </footer>
</body>
</html>

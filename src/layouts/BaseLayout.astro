      <a href={prefix + '/blog/tag/troubleshooting/'}>{isZh ? 'æ•…éšœæŽ’æŸ¥' : 'Troubleshoot'}</a>
      <a href={prefix + '/blog/tag/deployment/'}>{isZh ? 'éƒ¨ç½²' : 'Deploy'}</a>
      <a href={prefix + '/recommended-stack/'}>{isZh ? 'å·¥å…·æ ˆ' : 'Stack'}</a>
      <a href={prefix + '/daily/rss.xml'}>{isZh ? 'RSS' : 'RSS'}</a>
      <div class="lang-switch">
        <a href={enUrl} class={lang === 'en' ? 'active' : ''}>EN</a>

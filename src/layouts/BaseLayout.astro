---
import Analytics from '../components/Analytics.astro';

interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'zh';
  alternateUrl?: string;
  alternateLang?: string;
  ogType?: 'website' | 'article';
  ogImage?: string;
}
const {
  title,
  description = 'AI Agent Hub - News, tutorials, and practical guides for the AI agent ecosystem.',
  lang = 'en',
  alternateUrl,
  alternateLang,
  ogType = 'website',
  ogImage,
} = Astro.props;

const isZh = lang === 'zh';
const prefix = `/${lang}`;
const otherLang = isZh ? 'en' : 'zh';
const currentPath = Astro.url.pathname;
const enUrl = currentPath.replace(`/${lang}/`, '/en/');
const zhUrl = currentPath.replace(`/${lang}/`, '/zh/');
const siteUrl = 'https://kuoo.uk';
const siteLogo = `${siteUrl}/images/home-hero-cartoon.png`;
const dailyRssUrl = `${siteUrl}/${lang}/daily/rss.xml`;
const defaultOgImage = siteLogo;
const resolvedOgImage = ogImage
  ? (ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage.startsWith('/') ? '' : '/'}${ogImage}`)
  : defaultOgImage;
const organizationSchema = {
  '@type': 'Organization',
  name: 'AI Agent Hub',
  url: siteUrl,
  logo: siteLogo,
};
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: isZh ? 'AI æ™ºèƒ½ä½“èµ„è®¯ç«™' : 'AI Agent Hub',
  url: `${siteUrl}${prefix}/`,
  inLanguage: lang,
  description,
  publisher: organizationSchema,
};
---
<!doctype html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | AI Agent Hub</title>
  <!-- Open Graph -->
  <meta property="og:type" content={ogType} />
  <meta property="og:title" content={`${title} | AI Agent Hub`} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={Astro.url.href} />
  <meta property="og:site_name" content="AI Agent Hub" />
  <meta property="og:locale" content={lang === 'zh' ? 'zh_CN' : 'en_US'} />
  <meta property="og:image" content={resolvedOgImage} />
  <meta property="og:image:alt" content={`${title} | AI Agent Hub`} />
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={`${title} | AI Agent Hub`} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={resolvedOgImage} />
  <meta name="twitter:image:alt" content={`${title} | AI Agent Hub`} />
  <!-- Canonical -->
  <link rel="canonical" href={Astro.url.href} />
  {alternateUrl && alternateLang && (
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
  )}
  <link rel="alternate" hreflang={lang} href={Astro.url.href} />
  <link rel="alternate" hreflang="x-default" href={Astro.url.href.replace(`/${lang}/`, '/en/')} />
  <link rel="alternate" type="application/rss+xml" title={lang === 'zh' ? 'AI ç§‘æŠ€æ—¥æŠ¥ RSS' : 'AI Tech Daily RSS'} href={dailyRssUrl} />
  <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  <style>
    :root { 
      --accent: #4f46e5; 
      --accent-hover: #6366f1;
      --bg: #f8fafc; 
      --text: #1f2937;
      --text-muted: #6b7280;
      --card: #ffffff;
      --card-hover: #f8fafc;
      --border: #e5e7eb;
      --code-bg: #f3f4f6;
      --gradient-start: #eef2ff;
      --gradient-end: #f8fafc;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { scroll-behavior: smooth; }
    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif; 
      background: var(--bg); 
      color: var(--text); 
      line-height: 1.7; 
      -webkit-font-smoothing: antialiased;
    }
    header { 
      background: linear-gradient(135deg, var(--card) 0%, var(--gradient-start) 100%); 
      padding: 1rem 2rem; 
      border-bottom: 1px solid var(--border);
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
    }
    header a { 
      color: var(--accent-hover); 
      text-decoration: none; 
      font-weight: 700; 
      font-size: 1.25rem;
      transition: color 0.2s ease;
    }
    header a:hover { color: var(--accent); }
    header nav { 
      display: flex; 
      gap: 1.5rem; 
      align-items: center; 
      max-width: 1000px; 
      margin: 0 auto; 
      flex-wrap: wrap; 
    }
    header nav a { 
      color: var(--text-muted); 
      font-size: 0.95rem; 
      font-weight: 500;
      transition: all 0.2s ease;
    }
    header nav a:hover { color: var(--text); }
    header nav .lang-switch { 
      margin-left: auto; 
      display: flex; 
      gap: 0.5rem; 
      align-items: center; 
    }
    header nav .lang-switch a { 
      padding: 4px 12px; 
      border-radius: 6px; 
      font-size: 0.85rem; 
      font-weight: 600; 
      border: 1px solid var(--border);
      background: transparent;
    }
    header nav .lang-switch a.active { 
      background: var(--accent); 
      color: #fff; 
      border-color: var(--accent);
    }
    header nav .lang-switch a:not(.active) { 
      color: var(--text-muted); 
    }
    header nav .lang-switch a:not(.active):hover { 
      background: var(--card-hover); 
      color: var(--text);
    }
    main { max-width: 900px; margin: 2rem auto; padding: 0 1.5rem; }
    footer { 
      text-align: center; 
      padding: 2.5rem; 
      color: var(--text-muted); 
      font-size: 0.875rem;
      border-top: 1px solid var(--border);
      margin-top: 3rem;
    }
    a { 
      color: #60a5fa; 
      text-decoration: none; 
      transition: color 0.2s ease; 
    }
    a:hover { color: #93c5fd; }
    h1 { 
      font-size: 2rem; 
      color: #111827; 
      margin: 0 0 0.5rem; 
      font-weight: 700;
      letter-spacing: -0.02em;
    }
    h2,h3 { 
      color: #1f2937; 
      margin: 2rem 0 1rem; 
      font-weight: 600;
    }
    h2 { font-size: 1.5rem; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem; }
    .card { 
      background: var(--card); 
      border: 1px solid var(--border);
      border-radius: 12px; 
      padding: 1.5rem; 
      margin: 1.5rem 0;
      transition: border-color 0.2s ease;
    }
    .card:hover { border-color: var(--accent); }
    .card a { color: #60a5fa; }
    .card a:hover { color: #93c5fd; }
    .tag { 
      background: rgba(99, 102, 241, 0.15); 
      color: var(--accent-hover); 
      padding: 4px 10px; 
      border-radius: 6px; 
      font-size: 0.8rem; 
      font-weight: 500;
      border: 1px solid rgba(99, 102, 241, 0.3);
      transition: all 0.2s ease;
    }
    .tag:hover { 
      background: var(--accent); 
      color: #fff;
      border-color: var(--accent);
    }
    code { 
      background: var(--code-bg); 
      padding: 2px 8px; 
      border-radius: 6px; 
      font-size: 0.9em; 
      font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    }
    pre { 
      background: var(--code-bg); 
      padding: 1.25rem; 
      border-radius: 10px; 
      overflow-x: auto; 
      border: 1px solid var(--border);
      margin: 1rem 0;
    }
    pre code { background: none; padding: 0; font-size: 0.875rem; }
    img { max-width: 100%; border-radius: 10px; }
    ::selection { background: var(--accent); color: #fff; }
  </style>
</head>

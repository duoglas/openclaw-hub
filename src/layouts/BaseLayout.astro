---
import Analytics from '../components/Analytics.astro';

interface Props {
  title: string;
  description?: string;
  lang?: 'en' | 'zh';
  alternateUrl?: string;
  alternateLang?: string;
}
const {
  title,
  description = 'OpenClaw Hub - AI Agent Automation Hub',
  lang = 'en',
  alternateUrl,
  alternateLang,
} = Astro.props;

const isZh = lang === 'zh';
const prefix = `/${lang}`;
const otherLang = isZh ? 'en' : 'zh';
const currentPath = Astro.url.pathname;
const enUrl = currentPath.replace(`/${lang}/`, '/en/');
const zhUrl = currentPath.replace(`/${lang}/`, '/zh/');
---
<!doctype html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="generator" content={Astro.generator} />
  <title>{title} | OpenClaw Hub</title>
  {alternateUrl && alternateLang && (
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl} />
  )}
  <link rel="alternate" hreflang={lang} href={Astro.url.href} />
  <link rel="alternate" hreflang="x-default" href={Astro.url.href.replace(`/${lang}/`, '/en/')} />
  <style>
    :root { 
      --accent: #4f46e5; 
      --accent-hover: #6366f1;
      --bg: #f8fafc; 
      --text: #1f2937;
      --text-muted: #6b7280;
      --card: #ffffff;
      --card-hover: #f8fafc;
      --border: #e5e7eb;
      --code-bg: #f3f4f6;
      --gradient-start: #eef2ff;
      --gradient-end: #f8fafc;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html { scroll-behavior: smooth; }
    body { 
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif; 
      background: var(--bg); 
      color: var(--text); 
      line-height: 1.7; 
      -webkit-font-smoothing: antialiased;
    }
    header { 
      background: linear-gradient(135deg, var(--card) 0%, var(--gradient-start) 100%); 
      padding: 1rem 2rem; 
      border-bottom: 1px solid var(--border);
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
    }
    header a { 
      color: var(--accent-hover); 
      text-decoration: none; 
      font-weight: 700; 
      font-size: 1.25rem;
      transition: color 0.2s ease;
    }
    header a:hover { color: var(--accent); }
    header nav { 
      display: flex; 
      gap: 1.5rem; 
      align-items: center; 
      max-width: 1000px; 
      margin: 0 auto; 
      flex-wrap: wrap; 
    }
    header nav a { 
      color: var(--text-muted); 
      font-size: 0.95rem; 
      font-weight: 500;
      transition: all 0.2s ease;
    }
    header nav a:hover { color: var(--text); }
    header nav .lang-switch { 
      margin-left: auto; 
      display: flex; 
      gap: 0.5rem; 
      align-items: center; 
    }
    header nav .lang-switch a { 
      padding: 4px 12px; 
      border-radius: 6px; 
      font-size: 0.85rem; 
      font-weight: 600; 
      border: 1px solid var(--border);
      background: transparent;
    }
    header nav .lang-switch a.active { 
      background: var(--accent); 
      color: #fff; 
      border-color: var(--accent);
    }
    header nav .lang-switch a:not(.active) { 
      color: var(--text-muted); 
    }
    header nav .lang-switch a:not(.active):hover { 
      background: var(--card-hover); 
      color: var(--text);
    }
    main { max-width: 900px; margin: 2rem auto; padding: 0 1.5rem; }
    footer { 
      text-align: center; 
      padding: 2.5rem; 
      color: var(--text-muted); 
      font-size: 0.875rem;
      border-top: 1px solid var(--border);
      margin-top: 3rem;
    }
    a { 
      color: #60a5fa; 
      text-decoration: none; 
      transition: color 0.2s ease; 
    }
    a:hover { color: #93c5fd; }
    h1 { 
      font-size: 2rem; 
      color: #111827; 
      margin: 0 0 0.5rem; 
      font-weight: 700;
      letter-spacing: -0.02em;
    }
    h2,h3 { 
      color: #1f2937; 
      margin: 2rem 0 1rem; 
      font-weight: 600;
    }
    h2 { font-size: 1.5rem; border-bottom: 1px solid var(--border); padding-bottom: 0.5rem; }
    .card { 
      background: var(--card); 
      border: 1px solid var(--border);
      border-radius: 12px; 
      padding: 1.5rem; 
      margin: 1.5rem 0;
      transition: border-color 0.2s ease;
    }
    .card:hover { border-color: var(--accent); }
    .card a { color: #60a5fa; }
    .card a:hover { color: #93c5fd; }
    .tag { 
      background: rgba(99, 102, 241, 0.15); 
      color: var(--accent-hover); 
      padding: 4px 10px; 
      border-radius: 6px; 
      font-size: 0.8rem; 
      font-weight: 500;
      border: 1px solid rgba(99, 102, 241, 0.3);
      transition: all 0.2s ease;
    }
    .tag:hover { 
      background: var(--accent); 
      color: #fff;
      border-color: var(--accent);
    }
    code { 
      background: var(--code-bg); 
      padding: 2px 8px; 
      border-radius: 6px; 
      font-size: 0.9em; 
      font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    }
    pre { 
      background: var(--code-bg); 
      padding: 1.25rem; 
      border-radius: 10px; 
      overflow-x: auto; 
      border: 1px solid var(--border);
      margin: 1rem 0;
    }
    pre code { background: none; padding: 0; font-size: 0.875rem; }
    img { max-width: 100%; border-radius: 10px; }
    ::selection { background: var(--accent); color: #fff; }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href={prefix + '/'}>{isZh ? 'ü¶û OpenClaw Hub' : 'ü¶û OpenClaw Hub'}</a>
      <a href={prefix + '/blog/'}>{isZh ? 'ÊñáÁ´†' : 'Articles'}</a>
      <a href={prefix + '/blog/tag/comparison/'}>{isZh ? 'ÂØπÊØî' : 'Compare'}</a>
      <a href={prefix + '/blog/tag/guide/'}>{isZh ? 'ÊïôÁ®ã' : 'Guides'}</a>
      <a href={prefix + '/recommended-stack/'}>{isZh ? 'Êé®Ëçê' : 'Recommended'}</a>
      <a href="https://github.com/openclaw/openclaw" target="_blank">GitHub</a>
      <div class="lang-switch">
        <a href={enUrl} class={lang === 'en' ? 'active' : ''}>EN</a>
        <a href={zhUrl} class={lang === 'zh' ? 'active' : ''}>‰∏≠Êñá</a>
      </div>
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <p>¬© 2026 OpenClaw Hub ¬∑ Built with ü¶û and AI</p>
  </footer>
  <Analytics />
</body>
</html>
